<% layout('layouts/boilerplate') %> 

<div id="map" style="width: 100%; height: 500px;"></div>

<h1>All Campgrounds</h1>
<a class="btn btn-success m-3" href="/campgrounds/new">New camp</a>

<ol>
    <% for(camp of camps) {%>
        <div class="card mb-3" >
            <div class="row">
              <div class="col-md-4">
                <% if(camp.images.length) {%> 
                <img src="<%= camp.images[0].url %>" class="img-fluid rounded-start" alt="<%= camp.title %> Picture ">
                <% } else { %> 
                  <img src="https://res.cloudinary.com/dmrakjcmw/image/upload/v1674492291/YelpCamp/ljfg90iyozzaptnfe1zq.jpg" class="img-fluid rounded-start" alt="<%= camp.title %> Picture ">
                <% } %> 
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= camp.title %> </h5>
                  <h6 class="text-muted"><%= camp.location %></h6>
                  <p class="card-text"><%= camp.description %></p>
                  <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
                </div>
              </div>
            </div>
          </div>
    <% } %>  
</ol>

<script>
  const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
</script>

<script src="/javascripts/clusterMap.js"></script>